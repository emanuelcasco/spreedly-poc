doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width')
  title Spreedly PoC
  link(rel='stylesheet' type='text/css' href='styles.css')
  script(src='https://core.spreedly.com/iframe/iframe-v1.min.js')
  body
    form#payment-form.spf-form(accept-charset='UTF-8' method='POST' action="/payment_methods")
      fieldset.spf-fs-name
        h2 Transaction created
        p
          | token: #{transaction.token}
        p
          | state: #{transaction.state}
        p
          | payment_method_token: #{transaction.payment_method.token}
        p
          | response: !{JSON.stringify(transaction.response)}