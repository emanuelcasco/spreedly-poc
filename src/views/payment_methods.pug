doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width')
  title Spreedly PoC
  link(rel='stylesheet' type='text/css' href='styles.css')
  script(src='https://core.spreedly.com/iframe/iframe-v1.min.js')
  body
    form#payment-form.spf-form(accept-charset='UTF-8' method='POST' action="/payment_methods")
      fieldset.spf-fs-name
        h2 Card token to validate
        .spf-field.spf-field-fname
          label.internal(for='token') Card Token
          input#first_name.spf-input-text(type='text' name='token')
      fieldset.spf-field-submit
        input.button(type='submit' value='Submit card')
      fieldset.spf-field-fname
        h2 Validated payment methods
        ul
          each method in payment_methods
            li
              | #{method.card_type} *#{method.last_four_digits} :: #{method.token}